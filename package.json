{
  "name": "ts-npm-package-boilerplate",
  "version": "0.2.3",
  "description": "TypeScript NPM Module Boilerplate",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:outsidecube/db-api-sync.git"
  },
  "keywords": [
    "boilerplate",
    "typescript"
  ],
  "author": "Juan Ignacio Garz√≥n",
  "license": "BSD 2.0",
  "bugs": {
    "url": "https://github.com/outsidecube/db-api-sync/issues"
  },
  "homepage": "https://github.com/outsidecube/db-api-sync#readme",
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.52.0",
    "eslint": "8.35.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.4.3",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.{jsx,tsx,js}": "eslint --cache --fix"
  },
  "files": [
    "lib/**/*"
  ]
}
